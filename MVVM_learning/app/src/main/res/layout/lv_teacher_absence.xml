<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_student_ab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_round_account_circle_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ab_student_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spiderman"
                android:textAlignment="viewStart"
                android:textColor="@color/colorFlatTeacher"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ab_Student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spiderman"
                android:textAlignment="viewStart"
                android:textColor="@color/colorFlatTeacher"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ab_Student_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spiderman"
                android:textAlignment="textStart"
                android:textColor="@color/colorFlatTeacher"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>